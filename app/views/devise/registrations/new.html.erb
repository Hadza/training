<div class="flex flex-col items-center sm:card py-20 px-8 sm:w-auto">
  <div class="flex flex-col gap-12">
    <h2 class="text-gray-3 text-center">Welcome!<br/> Let's get you started.</h2>
    <p class="text-gray-3 text-center font-normal">Already have an account?
      <%= link_to 'Sign In', new_user_session_path, class: "font-bold" %>
    </p>
    <%= form_with(model: resource , html: { class: 'pt-6 flex flex-col items-center'} , scope: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Email Address", class:'text-left' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div>

      <div class="field pt-6">
        <%= f.label :password %>
        <br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="flex flex-col pt-12 items-center">
        <%= f.submit "SIGN UP", :class => 'my-4' %>
      </div>
    <% end %>
  </div>

</div>
