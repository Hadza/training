<div class="flex flex-col items-center card w-auto py-20 px-8">
  <div class="flex flex-col items-center gap-12">
    <h2 class="text-gray-3">Welcome back!</h2>
    <p class="text-gray-3 font-normal">Don't have an account? <span class="text-primary-500 font-bold">Sign Up</span></p>
    <%= form_for(resource, html: { class: 'user pt-6'} , as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Email Address", class: 'text-left' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
      </div>

      <div class="field pt-6">
        <%= f.label :password, class: 'text-left' %><br />
        <%= f.password_field :password, autocomplete: "current-password"%>
      </div>

      <div class="flex flex-col pt-12 items-center">
        <%= f.submit "SIGN IN", :class => 'my-4' %>
      </div>
    <% end %>

  </div>
</div>
