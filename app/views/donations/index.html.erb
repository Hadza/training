<%#= link_to 'Back', '/' %>
<div class="flex flex-col sm:card py-16 px-6 sm:w-auto sm:min-w-card-min sm:max-w-card-max">
  <h2 class="text-gray-3 text-left mb-10">
    Donation List
  </h2>
  <% if @donations.any? %>
    <% @donations.each do |donation| %>
      <%= link_to donation, class: "card shadow-none border-solid border border-gray-6 rounded p-6 mb-6 #{'pointer-events-none' unless user_signed_in?}" do %>
        <div class="flex justify-between mb-3">
          <div class="text-xs text-gray-4">
            <%= "Posted: #{donation.created_at.strftime("%d-%m-%Y")}" %>
          </div>
          <div class="text-xs leading-4 font-medium text-gray-4 rounded py-1 px-2.5 <%= class_names(donation.claimed ? 'bg-tertiary-300 text-tertiary-500 ' : 'bg-secondary-300 text-secondary-500 ') %>">
            <%= donation.claimed ? "Claimed" : "Available" %>
          </div>
        </div>
        <h4 class="text-gray-3 mb-3">
          <%= donation.name %>
        </h4>
        <div class="text-gray-4 text-xs mb-2">
          <%= "Category: #{donation.category.name}" %>
        </div>
        <div class="text-gray-4 text-xs">
          <%= "Posted by: #{donation.donor.email}" %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="flex flex-col items-center pt-8">
      <div class="flex items-center justify-center w-12 h-12 rounded-3xl bg-tertiary-300 text-center mb-3">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12.8284 14.1716C11.2663 12.6095 8.73361 12.6095 7.17151 14.1716M13 8H12.99M7 8H6.99M1 10C1 14.9706 5.02944 19 10 19C14.9706 19 19 14.9706 19 10C19 5.02944 14.9706 1 10 1C5.02944 1 1 5.02944 1 10Z" stroke="#EF9DE0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <span class="text-gray-3 text-base font-bold text-center mb-2">Looks like there's nothing here!</span>
      <p class="text-gray-10 text-sm mb-16">No donations have been listed yet</p>
      <%= link_to "CREATE A DONATION ITEM", new_donation_path, class: 'btn-primary' %>
    </div>
  <% end %>
</div>
